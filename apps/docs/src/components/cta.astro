---
import IconoDocutopia from "../assets/docutopia-icono.svg";
import CtaBackground from "../assets/cta-background.png";
---

<section class="bg-black py-16 sm:py-20 lg:py-24">
  <div class="mx-auto max-w-[1280px] px-4 sm:px-6 lg:px-8">
    <div
      class="
        relative overflow-hidden rounded-xl border border-zinc-700
        shadow-[0_20px_25px_-5px_rgba(0,0,0,0.4),0_10px_10px_-5px_rgba(0,0,0,0.3)]
      "
    >
      <img
        src={CtaBackground.src}
        alt=""
        aria-hidden="true"
        class="absolute inset-0 h-full w-full object-cover"
      />

      <div
        class="absolute inset-0 bg-gradient-to-br
               from-black/60 via-black/40 to-black/60"
      ></div>

      <div
        class="
          relative z-10 flex flex-col gap-6
          px-6 py-8
          sm:px-8 sm:py-10
          md:flex-row md:items-center md:justify-between
        "
      >
        <div class="flex flex-col sm:flex-row items-center gap-4 text-center sm:text-left">
          <img
            src={IconoDocutopia.src}
            alt="Docutopia"
            class="hidden sm:block h-10 w-10"
            draggable="false"
          />

          <h2
            class="
              text-white font-bold leading-tight
              text-xl sm:text-2xl lg:text-3xl
            "
          >
            Time to try Docutopia
          </h2>
        </div>

        <a
          href="/demo"
          class="
            inline-flex items-center justify-center
            rounded-md bg-white px-6 py-2.5
            text-sm sm:text-base font-semibold text-black
            transition hover:bg-zinc-200
            whitespace-nowrap
            mx-auto md:mx-0
          "
        >
          See Demo
        </a>
      </div>
    </div>
  </div>
</section>
