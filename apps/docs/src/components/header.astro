---
import docutopiaLogo from "../assets/docutopia-logo.svg";
import Github from "./icons/github.astro";
---
  <header
    id="site-header"
    class="fixed left-0 top-0 w-full z-40 transition duration-300 ease-in-out
      bg-transparent
      h-16"
  >
    <div class="max-w-[1368px] mx-auto flex items-center justify-between h-full px-4 md:px-8 lg:px-12 mt-4">
      <a href="/" class="flex items-center gap-2 select-none">
        <img 
          src={docutopiaLogo.src}
          alt="Docutopia Logo"
          class="h-8 w-auto md:h-9"
          width="36" height="36"
          draggable="false"      
        />  
      </a>

      <a 
        href="https://github.com/your-org/" 
        aria-label="GitHub" 
        class="text-white hover:text-gray-300 transition"
        target="_blank" rel="noopener"
      >
        <Github class="h-8 w-8 md:h-9 md:w-9" />
      </a>
    </div>
  </header>

<script is:inline>
  window.addEventListener('scroll', () => {
    const header = document.getElementById('site-header');
    if (!header) return;
    if (window.scrollY > 10) {
      header.classList.add('bg-[#181818]/95', 'backdrop-blur', 'shadow-lg');
    } else {
      header.classList.remove('bg-[#181818]/95', 'backdrop-blur', 'shadow-lg');
    }
  });
</script>